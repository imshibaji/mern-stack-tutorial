extends ../../common/admin-layout

block content
    - console.log(added)
    if req.added
        .alert.alert-success.p-3 Data Added Successfully
    if req.updated
        .alert.alert-success.p-3 Data Updates Successfully
    if req.deleted
        .alert.alert-success.p-3 Data Deleted Successfully
    h1.text-center Contact List
    .row.justify-content-center
        table.table
            tr
                th Name
                th Email
                th Mobile
                th Message
                th Actions
            each contact in contacts
                tr
                    td=contact.name
                    td=contact.email
                    td=contact.mobile
                    td=contact.message
                    td
                        a.btn.btn-primary(href="/admin/contacts/"+contact.name) Show
                        a.btn.btn-warning(href="/admin/contacts/"+contact._id+'/edit') Edit
                        a.btn.btn-danger(href="/admin/contacts/"+contact._id+'/delete') Delete